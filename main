#include <iostream>
#include <random>
class Data {
public:
    std::string name2;
    std::string color;
    Data(std::string name2, std::string color) {
        this-> name = name;
        this-> color = color;
    }
};
template <typename T> class Node{
public:
    T *name;
    T *color;
    Node<T> *next;
    Node(T *name, T *color) {
        this-> name = name;
        this-> color = color;
        this-> next = nullptr;
    }
    string getName(){
        return name;
       }
     string getColor(){
        return color;
     }
};
template <typename T> class LinkedList{
   private:
    Node<T> head;
    Node<T> tail;
    Node<T> *playerPosition;
    int length;
     int goPast;
public:
    LinkedList(T *name, T *color){
        Node<T> newNode = new Node<T>(name, color);
        head = newNode;
        tail = newNode;
        tail-> next = head;
        length = 1;
        goPast = 0;
        playerPosition = head;
    }
    ~LinkedList(){
        Node<T> *temp = head;
        while (head != nullptr){
            head = head-> next;
            delete temp;
            temp = head;
        }
    }
    void addSpace(string name, string color) {
        if(length == 0){
            Node<T> newNode = new Node<T>(name, color);
            head = newNode;
            tail = newNode;
            tail-> next = head;
        }
        else if(length < 40){
            tail -> next = newNode;
            tail = newNode;
            tail-> next = head;
            length++;

        }
        else{
            std::cout<<"failed"<<endl;
        }
    }
    void addMultiple(Node<T>[] nodes){
        for(int x = 0; x < nodes.length; x++){
            addSpace(nodes[x].name, nodes[x].color);
        }
    }
    void printSpace(){
        cout<<"Landed on: "<<playerPosition.getName()<<endl;
    }
void printGo(){
    cout<<"Times past GO: "<<goPast<<endl;
}
    void move(){
        int spaces = std::rand() % 11 + 1;
        for(int a = 0; a < spaces; a++){
            playerPosition = playerPosition-> next;
            if(playerPosition == head){
                goPast++;
                printGo();
            }
        }
        printSpace();
    }
};

void main() {
    LinkedList board = new LinkedList(new Node<T>("1st street", "brown"));
    board.add("2nd street", "brown");
    Node<T> spaces = {new Node<T>("3rd street", "grey"), new Node<T>("4th street", "grey")};
    board.addMany(spaces);
    board.move();
}
