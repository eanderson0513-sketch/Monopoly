#include <iostream>
class Data {
public:
    std::string name;
    std::string color;
    Data(std::string name, std::string color) {
        this-> name = name;
        this-> color = color;
    }
};
template <typename T> class Node{
public:
    T *name;
    T *color;
    Node<T> *next;
    Node(T *name, T *color) {
        this-> name = name;
        this-> color = color;
        this-> next = nullptr;
    }
};
template <typename T> class LinkedList{
   private:
    Node<T> head;
    Node<T> tail;
    Node<T> *playerPosition;
    int length;
     int goPast;
public:
    LinkedList(T *name, T *color){
        Node<T> newNode = new Node<T>(name, color);
        head = newNode;
        tail = newNode;
        length = 1;
        goPast = 0;
        playerPosition = head;
    }
    ~LinkedList(){
        Node<T> *temp = head;
        while (head != nullptr){
            head = head-> next;
            delete temp;
            temp = head;
        }
    }
    void addSpace(string name, string color) {
        if(length == 0){
            Node<T> newNode = new Node<T>(name, color);
            head = newNode;
            tail = newNode;
        }
        else if(length < 40){
            tail -> next = newNode;
            tail = newNode;

        }
        else{
            std::cout<<"failed"<<endl;
        }
    }
    void addMultiple(Node<T>[] nodes){
        for(x = 0; x < nodes.length; x++){
            addSpace(nodes[x].name, nodes[x].color);
        }
}


};
int main() {

}
